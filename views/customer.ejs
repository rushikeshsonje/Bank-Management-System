<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer</title>
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<style>
    body{
        height: 41.8rem;
    }
    table,
    th,
    td {
        text-align: center;
    }
    .data{
        width: 90% !important;
    }
    .container-fluid .row .name h4 {
        font-size: 1.5rem;
    }
    @media (max-width: 1050px) {
        .container-fluid .row .name h4{
            font-size: 1.2rem;
            margin-left: 10px;
        }
    }
    @media (max-width: 800px) {
        .container-fluid .row .name h4{
            font-size: 1rem;
            margin-left: 2px;
        }
        .data{
            width: 100% !important;
        }
    }
</style>
<body>
    <div class="container-fluid">
        <%- include('./navigation.ejs') %>
        <div class="row d-flex justify-content-between">
            <div class="name col-8 my-3">
                <h4>Welcome <%= user[0].name %></h4>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <p class="d-flex justify-content-center">
                <a class="btn btn-primary me-3" data-bs-toggle="collapse" href="#collapseExample" role="button"
                    aria-expanded="false" aria-controls="collapseExample">
                    View Account Balance
                </a>
                <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample1" role="button"
                    aria-expanded="false" aria-controls="collapseExample1">
                    See Personal Details
                </a>
            </p>
        </div>
        <div class="collapse" id="collapseExample">
            <div class="card fw-bolder card-body text-center">
                <%= user[0].accbalance %>
            </div>
        </div>
        <div class="collapse" id="collapseExample1">
            <div class="card card-body">
                <div class="data container p-4">
                    <table class="table table-bordered table-hover table-info border-dark">
                        <thead>
                            <tr>
                                <th scope="col">Fields</th>
                                <th scope="col">Data</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">Name</th>
                                <td>
                                    <%= user[0].name %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Email</th>
                                <td>
                                    <%= user[0].email %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Account Number</th>
                                <td>
                                    <%= user[0].accno %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Mobile Number</th>
                                <td>
                                    <%= user[0].mobileno %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Adhar Number</th>
                                <td>
                                    <%= user[0].adharno %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Date Of Birth</th>
                                <td>
                                    <%= user[0].dob %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Address</th>
                                <td>
                                    <%= user[0].address %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">State</th>
                                <td>
                                    <%= user[0].state %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">District</th>
                                <td>
                                    <%= user[0].district %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">City</th>
                                <td>
                                    <%= user[0].city %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">gender</th>
                                <td>
                                    <%= user[0].gender %>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
<!-- </div> -->

<script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>